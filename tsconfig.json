{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowJs": false,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2017"
    ],
    "paths": {
      "@traverse/*": ["./traverse/*"],
      "@traverse": ["./traverse/index.ts"],
      "@parse/*": ["./parse/*"],
      "@parse": ["./parse/index.ts"],
      "@node/*": ["./node/*"],
      "@node": ["./node/index.ts"],
      "@help/*": ["./help/*"],
      "@help": ["./help/index.ts"],
      "@generate/*": ["./generate/*"],
      "@generate": ["./generate/index.ts"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": false,
    "strict": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
